<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject6" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorPrimary">@color/black</item>
    </style>
    <style name="match_constraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="my_button" parent="match_constraint">
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="my_button.dark" parent="my_button">
        <item name="android:backgroundTint">@color/design_default_color_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_button.red" parent="my_button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_button.green" parent="my_button">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.FinalProject6" parent="Base.Theme.FinalProject6" />
</resources>